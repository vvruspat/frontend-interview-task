{
  "compilerOptions": {
    "module": "esnext",
    "lib": ["es2020", "dom"],
    "allowJs": true,
    "moduleResolution": "node",
    "target": "es6",
    "outDir": "./dist",
    "jsx": "react",
    "strict": true,
    "resolveJsonModule": true,
    "skipLibCheck": true,
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "baseUrl": "./",
    "paths": {
    }
  },
  "typeRoots": ["node_modules/@types"],
  "include": ["./src", "./typings"],
  "removeComments": true
}
